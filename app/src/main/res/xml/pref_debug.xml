<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="pref_debug_show_result"
        android:title="Show Result Data" />

    <EditTextPreference
        android:inputType="textUri"
        android:key="pref_debug_save_file"
        android:title="Result Save File" />

    <EditTextPreference
        android:defaultValue="1"
        android:inputType="numberSigned"
        android:key="pref_debug_start_lat"
        android:title="@string/pref_debug_start_lat" />

    <EditTextPreference
        android:defaultValue="1"
        android:inputType="number|numberSigned"
        android:key="pref_debug_start_lon"
        android:title="@string/pref_debug_start_lon" />

    <EditTextPreference
        android:defaultValue="1"
        android:inputType="number|numberSigned"
        android:key="pref_debug_end_lat"
        android:title="@string/pref_debug_end_lat" />

    <EditTextPreference
        android:defaultValue="1"
        android:inputType="number|numberSigned"
        android:key="pref_debug_end_lon"
        android:title="@string/pref_debug_end_lon" />

    <!-- This preference simply launches an intent when selected. Use this UI sparingly, per
         design guidelines. -->

</PreferenceScreen>
